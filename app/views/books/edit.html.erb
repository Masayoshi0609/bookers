

<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
   <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
   </ul>
  
<% end %>

  <p>Title</p>
   <%= f.text_field :title %>
  <p>Body</p>
   <%= f.text_area :body %>
