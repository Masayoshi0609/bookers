<head>
 <link rel="stylesheet" media="all" href="../../stylesheets/index.css" />


</head>

<body>



    <p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>　<td><%= book.body %></td>
        <td><a class="show_" href="">Show</a></td>
        <td><a class="edit_" href="">Edit</a></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%>  </td>
      </tr>
      <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
   <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
   </ul>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit "投稿" %>


<% end %>
</body>